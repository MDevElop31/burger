<h1>Eat Da Burger!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
       <div>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
          </form>
       </div>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <div class='burgerEaten'>
          <div>
            {{this.burger_name}}
          </div>
      </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger!</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Mmm mmm Burger">
      <button type="submit" class="addBurgerButton">Add a Burger</button>
    </form>
  </div>
</div>